<div class="flex space-x-2 mt-4">
  <%# First Page Link %>
  <% if current_page.first? %>
    <span class="bg-gray-300 text-white py-2 px-4 rounded-lg opacity-50 cursor-not-allowed">« First</span>
  <% else %>
    <%= link_to '« First', url_for(page: 1), class: 'bg-sky-500 text-white py-2 px-4 rounded-lg hover:bg-sky-600' %>
  <% end %>

  <%# Page Numbers %>
  <% paginator.each_page do |page| %>
    <% if page %>
      <% if page == current_page %>
        <span class="bg-sky-700 text-white py-2 px-4 rounded-lg font-bold"><%= page %></span>
      <% else %>
        <%= link_to page, url_for(page: page), class: 'bg-sky-500 text-white py-2 px-4 rounded-lg hover:bg-sky-600' %>
      <% end %>
    <% else %>
      <span class="py-2 px-4">...</span>
    <% end %>
  <% end %>

  <% if current_page.last? %>
    <span class="bg-gray-300 text-white py-2 px-4 rounded-lg opacity-50 cursor-not-allowed">Last »</span>
  <% else %>
    <%= link_to 'Last »', url_for(page: @campaigns.total_pages), class: 'bg-sky-500 text-white py-2 px-4 rounded-lg hover:bg-sky-600' %>
  <% end %>
</div>
