<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">Campaign Details</h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
      <div class="mb-4">
        <p class="block text-gray-700">Customer ID</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.customer_id %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Platform Campaign ID</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.platform_campaign_id %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Title</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.title %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Currency</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.currency %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Budget (cents)</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.budget_cents %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Advertiser Name</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.advertiser.name %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Status</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.status.humanize %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Created At</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.created_at %></p>
      </div>

      <div class="mb-4">
        <p class="block text-gray-700">Updated At</p>
        <p class="mt-1 block w-full border-gray-300 rounded-md p-2 text-lg"><%= @campaign.updated_at %></p>
      </div>

      <div class="flex flex-wrap gap-2">
        <%= link_to "Edit", edit_platform_campaign_path(@platform, @campaign), class: "inline-block bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-cyan-600" %>
        <%= link_to 'Back', platform_campaigns_path(@platform), class: "inline-block bg-blue-600  text-white py-2 px-4 rounded-lg hover:bg-blue-800" %>
      </div>
  </div>
</div>