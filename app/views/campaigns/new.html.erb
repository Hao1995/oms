<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">New Campaign</h1>

  <%= form_with(model: @campaign, url: platform_campaigns_path(@platform), local: true) do |form| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-700" %>
        <%= form.text_field :title, placeholder: "Enter campaign title", class: "mt-1 block w-full border-gray-300 rounded-md p-2 text-lg" %>
      </div>

      <div class="mb-4">
        <%= form.label :advertiser_id, class: "block text-gray-700" %>
        <%= form.collection_select :advertiser_id, @advertisers, :id, :name, { prompt: 'Select Advertiser' }, { class: "mt-1 block w-full border-gray-300 rounded-md p-2 text-lg" } %>
      </div>

      <div class="mb-4">
        <%= form.label :budget_cents, "Budget (cents)", class: "block text-gray-700" %>
        <%= form.number_field :budget_cents, step: 0.01, placeholder: "e.g. 5000.00", class: "mt-1 block w-full border-gray-300 rounded-md p-2 text-lg" %>
      </div>

      <div class="mb-4">
        <%= form.label :currency, class: "block text-gray-700" %>
        <%= form.text_field :currency, placeholder: "USD, EUR, etc.", class: "mt-1 block w-full border-gray-300 rounded-md p-2 text-lg" %>
      </div>


      <div class="flex flex-wrap gap-2">
        <%= form.submit "Create Campaign", class: "inline-block bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-cyan-600" %>
        <%= link_to 'Back', platform_campaigns_path(@platform), class: "inline-block bg-blue-600  text-white py-2 px-4 rounded-lg hover:bg-blue-800" %>
      </div>
    </div>
  <% end %>
</div>
